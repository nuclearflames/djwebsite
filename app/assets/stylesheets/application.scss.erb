@import "variables";
body {
  background-color: $black;
  font-size: 12px;
  font-family: "Arial","Times New Roman","Comic Sans MS";
  color: $white;
  z-index: -1;
}

div {
  background-repeat: no-repeat;
}

a {
  color: $white;
  &:visited {
    color: $grey;
  }
  &:hover {
    color: $grey;
  }
}
@media (min-width: 1px) {
  #mainField {
    position: relative;
    margin-left: auto;
    margin-right: auto;
    margin-top: auto;
    margin-bottom: auto;
    width: 1000px;
    min-height: 800px;
    background-color: $black;
    z-index: 0;
    border-top: 1px solid;
    border-bottom: 1px solid;
    #error_explanation {
      position: relative;
      bottom: 0px;
      width: 450px;
      border: 2px solid red;
      padding: 7px;
      padding-bottom: 0;
      background-color: $magenta;
      h2 {
        text-align: left;
        font-weight: bold;
        padding: 0px 5px 5px 15px;
        font-size: 12px;
        margin-bottom: 0px;
        background-color: #c00;
        color: $white; 
      }
      ul li {
        font-size: 12px;
        list-style: square;
        color: $red;
        display:block;
        } 
    }
    #header {
      position: relative;
      height: 20px;
      font-size: 16px;
      #breadcrumb {
        font-size: 16px;
        left: 0px;
        a {
          float: left;
          text-decoration: none;
          color: white;
        }
        .breadcrumbArrow {
          float: left;
          background-image: image_url("breadcrumb-white.png");
          height: 10px;
          width: 10px;
          margin: 5px 0px 0px 5px;
        }
      }
      #notice {
        position: relative;
        background-color: $grey;
        color: white;
        right: 10px;
      }
      #login {
        position: absolute;
        right: 0px;
      }
    }
    #content {
      position:relative;
      min-height: 490px;
      #yield {
        position: relative;
        float: left;
        width: 590px;
        z-index: 5;
        #enquires {
          position:relative;
          top: 10px;
        }
        #leftBar, #rightBar {
          position: relative;
          float: left;
          padding-left: 10px;
          .headers {
            position: relative;
            font-size: 26px;
          }
          .tableNews {
            position: relative;
            left: 5px;
            border-top: 1px solid;
            border-bottom: 1px solid;
            width: 215px;
            th {
              font-size: 16px;
              text-align: left;
            }
          }
        }
        #NewsTable {
          position: relative;
          left: 10px;
          width: 215px;
        }
        .tableTD {
          position: relative;
          left: 10px;
        }

        .newTable {
          width: 100px;
        }

        #eventDescription {
          position: relative;
        }

        #eventDate {
          position: relative;
          left: 65px;
        }

        .tableBottomBorders {
          border-bottom: 1px solid;
        }

        #indexContent {
          position: relative;
          width: 450px;
        }

        #indexContentTitle {
          position: relative;
          width: 450px;
          font-size: 20px;
          padding-bottom: 3px;
        }

        #indexContentContent {
          position: relative;
          left: 5px;
          background-color: #212121;
          width: 450px;
          padding-bottom: 5px;
        }

        #eventTime {
          position: relative;
          right: 0px;
        }

        .userInformation {
          position: relative;
          top: 80px;
          left: -500px;
          background-color: black;
        }

        #editSubmit {
          position: relative;
          bottom: 50px;
        }

        #editMenu {
          position: relative;
          top: -25px;
          right: 0px;
          width: 200px;
          li {
            display: block;
          }
        }

        #aboutustext {
          width: 400px;
          height: 350px;
        }

        #enquires_form_Area {
          width: 450px;
          height: 250px;
          background-color: $black;
          color: $white;
        }

        .send_buttons {
          position: relative;
          font-size: 15px;
          font-color: $white;
          width: 457px;
          height: 50px;
        }
      }
      #logo {
        position: relative;
        float: left;
        top: 10px;
        left: 10px;
        height: 289px;
        width: 400px;
        background-image: image_url("DJ_logo.png");
      }
    }
    #footer {
      height: 290px;
      #bookNow {
        position: relative;
        float: left;
        background-image: image_url("DJ_BookNowBG.png");
        z-index: 2;
        height: 290px;
        width: 380px;
        left: 5px;
        #bookNowText {
          position: absolute;
          z-index: 3;
          font-size: 40px;
          left: 65px;
          bottom: 60px;
        }
      }
      #mainMenu {
        position: relative;
        float: left;
        right: 0px;
        top: -50px;
        height: 290px;
        .menuBarsImages, .menuBars {
          float: left;
          width: 150px;
          padding-top: 10px;
          z-index: 0;
          margin-right: 3px;
        }
        #menuSelect {
          position: relative;
          height: 60px;
        }
        #menuSelectBars {
          position: relative;
          height: 150px;
            .menuBars {
            height: 150px;
            background-image: image_url("DJ_menu_drop.png");
          }
        }
        .barText {
          position: absolute;
          z-index: 1;
          top: 10px;
          font-size: 25px;
        }
        .menuBarsImages {
          height: 50px;
          z-index: 2;
          background-image: image_url("DJ_menu.png");
        }
        #handsImage {
          position: relative;
          background-image: image_url("DJ_hands.png");
          z-index: -1;
          height: 160px;
          top: -30px;
          left: -5px;
        }
      }
    }
    #aboutUs {
      left: 25px;
    }

    #ourNights {
      left: 170px;
    }

    #contactUs {
      left: 320px;
    }

    #testimonials {
      left: 463px;
    }
  }
}

@media (max-width: 1000px) {
  #mainField {
    width: inherit;
    #content {
      #logo {
        position: relative;
        top: 50px;
        right: 10px;
        height: 143px;
        width: 200px;
        background-image: image_url("DJ_logo_small.png");
      }
    }
    #footer {
      #mainMenu {
        position: absolute;
        bottom: 50px;
        top: auto;
      }
      #bookNow {
        height: 235px;
        width: 300px;
        top: 55px;
        background-image: image_url("DJ_BookNowBG_small.png");
        #bookNowText {
          font-size: 30px;
          left: 55px;
          bottom: 50px;
        }
      }
      #handsImage {
        right: -5px;
      }
    }
  }
}

@media (max-width:650px) {
  #mainField {
    #footer {
      #mainMenu {
        .barText {
          position: inherit;
        }
        #handsImage {
          display: none;
        }
      }
    }
  }
}

@media (max-width:480px) {
  #mainField {
    #content {
      #yield {
        #leftBar, #rightBar {
          float: none;
        }
      }
    }
    #footer {
      position: relative;
      #mainMenu {
        bottom: 70px;
        #menuSelectBars {
          display: none;
        }
      }
    }
  }
}
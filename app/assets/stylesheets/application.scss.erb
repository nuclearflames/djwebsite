@import "variables";

body {
  background-color: $black;
  font-size: 12px;
  font-family: "Arial","Times New Roman","Comic Sans MS";
  color: $white;
  z-index: -1;
}

a {
  color: $white;
  &:visited {
    color: $grey;
  }
  &:hover {
    color: $grey;
  }
}

#error_explanation {
  position: absolute;
  bottom: 0px;
  width: 450px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 0;
  background-color: $magenta;
  h2 {
    text-align: left;
    font-weight: bold;
    padding: 0px 5px 5px 15px;
    font-size: 12px;
    margin-bottom: 0px;
    background-color: #c00;
    color: $white; 
  }
  ul li {
    font-size: 12px;
    list-style: square;
    color: $red;
    display:block;
    } 
}

#notice {
  position: relative;
  background-color: $grey;
  color: white;
  left: 10px;
}

#mainField {
  position: relative;
  margin-left: auto;
  margin-right: auto;
  margin-top: auto;
  margin-bottom: auto;
  width: 975px;
  height: 800px;
  background-color: $black;
  z-index: 0;
  border-top: 1px solid;
  border-bottom: 1px solid;
}

#menuBarBottoms {
  position: absolute;
  top: 460px;
  left: 330px;
}

.logo {
  position: absolute;
  top: 20px;
  left: 10px;
  height: 300px;
}

.bookNow {
  position: absolute;
  left: 0px;
  bottom: 0px;
  z-index: 2;
}

#bookNowText {
  position: absolute;
  left: 65px;
  bottom: 80px;
  z-index: 3;
  font-size: 40px;
}

#hands {
  width: 500px;
}

.handsImage {
  position: absolute;
  z-index: -1;
  right: 0px;
  bottom: 0px;
}

.barText {
  position: absolute;
  z-index: 1;
  top: 10px;
  font-size: 25px;
}

#aboutUs {
  left: 25px;
}

#ourNights {
  left: 170px;
}

#contactUs {
  left: 320px;
}

#testimonials {
  left: 463px;
}

#mainMenu {
  position: absolute;
  right: 0px;
  bottom: 350px;
  width: 650px;
  ul {
    position: absolute;
    float: left;
    width: 100%;
    padding: 0;
    margin: 0;
    list-style-type: none;
  }
  li {
    display: inline;
  }
}

.menuBarsImages, .menuBars {
  width: 150px;
  border: none;
}

#menuSelectBars {
  position: relative;
  top: 60px;
}

#infoBar {
  position: absolute;
}

#yield {
  position: absolute;
  top: 20px;
  right: 0px;
  height: 350px;
  width: 500px;
}

#leftBar {
  position: absolute;
  left: 0px;
  width: 225px;
}

#rightBar {
  position: absolute;
  left: 250px;
  width: 225px;
}

/*News*/


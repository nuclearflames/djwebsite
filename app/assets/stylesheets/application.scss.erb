@import "variables";
body {
  background-color: $black;
  font-size: 12px;
  font-family: "Arial","Times New Roman","Comic Sans MS";
  color: $white;
  z-index: -1;
}

div {
  background-repeat: no-repeat;
}

a {
  color: $white;
  &:visited {
    color: $grey;
  }
  &:hover {
    color: $grey;
  }
}

.clear {
  clear: both;
}

.mainField {
  margin-left: auto;
  margin-right: auto;
  width: 90%;
  background-color: $black;
  border-top: 1px solid;
  border-bottom: 1px solid;
  div {
    word-wrap:break-word;
  }
  .header {
    font-size: 18px;
    padding-bottom: 5px;
    .login {
      float: right;
    }
    .breadcrumb {
      float: left;
      .breadcrumbArrow {
        height: 11px;
        width: 6px;
        background-image: image_url("breadcrumb-white.png");
        margin: 6px;
      }
      a, div {
        float: left;
      }
    }
  }
  .content {
    min-height: 400px;
    #yield {
      position:relative;
      float: left;
      width: 55%;
      #enquires {
        position:relative;
        top: 10px;
      }
      #leftBar, #rightBar {
        position: relative;
        float: left;
        padding-left: 10px;
        .headers {
          position: relative;
          font-size: 26px;
        }
        .tableNews {
          position: relative;
          left: 5px;
          border-top: 1px solid;
          border-bottom: 1px solid;
          width: 215px;
          th {
            font-size: 16px;
            text-align: left;
          }
        }
      }
      #NewsTable {
        position: relative;
        left: 10px;
        width: 215px;
      }
      .tableTD {
        position: relative;
        left: 10px;
      }

      .newTable {
        width: 100px;
      }

      #eventDescription {
        position: relative;
      }

      #eventDate {
        position: relative;
        left: 65px;
      }

      .tableBottomBorders {
        border-bottom: 1px solid;
      }

      #indexContent {
        position: relative;
        width: 450px;
      }

      #indexContentTitle {
        position: relative;
        width: 450px;
        font-size: 20px;
        padding-bottom: 3px;
      }

      #indexContentContent {
        position: relative;
        left: 5px;
        background-color: #212121;
        width: 450px;
        padding-bottom: 5px;
      }

      #eventTime {
        position: relative;
        right: 0px;
      }

      .userInformation {
        position: relative;
        top: 80px;
        left: -500px;
        background-color: black;
      }

      #editSubmit {
        position: relative;
        bottom: 50px;
      }

      #editMenu {
        position: relative;
        top: -25px;
        right: 0px;
        width: 200px;
        li {
          display: block;
        }
      }

      #enquires_form_Area {
        width: 100%;
        height: 250px;
        background-color: $black;
        color: $white;
      }

      .send_buttons {
        position: relative;
        font-size: 15px;
        font-color: $white;
        width: 100%;
        height: 50px;
      }
    }
    #logo {
      position:relative;
      float: right;
      height: 286px;
      width: 400px;
      background-image: image_url("DJ_logo.png");
    }
  }
  .footer {
    .mainMenu {
      position: relative;
      float: right;
      text-align: center;
        .menuBarsImages, .menuBars {
          float: left;
          width: 150px;
          padding-top: 10px;
          z-index: 0;
          margin-right: 3px;
        }
        .menuSelectBars {
          .menuBars {
            height: 150px;
            background-image: image_url("DJ_menu_drop.png");
          }
        }
        .barText {
          z-index: 1;
          top: 10px;
          font-size: 25px;
        }
        .menuBarsImages {
          height: 50px;
          z-index: 2;
          background-image: image_url("DJ_menu.png");
        }
    }
    .bookNow {
      position: relative;
      float: left;
      padding-right: 5%;
      height: 299px;
      width: 389px;
      background-image: image_url("DJ_BookNowBG.png");
      #bookNowText {
        position: absolute;
        font-size: 40px;
        top: 190px;
        left: 65px;
      }
    }
    .handsImage {
      position: relative;
      float: left;
    }
  }
}

@media (max-width: 1200px) {
  .mainField {
    .content {
      #logo {
        height: 143px;
        width: 200px;
        background-image: image_url("DJ_logo_small.png");
      }
    }
    .footer {
      .menuSelectBars {
        display: none;
      }
    }
  }
}

@media (max-width: 950px) {
  .mainField {
    .content {
      #yield {
        width: 100%;
      }
    }
  }
}
@import "variables";
body {
  background-color: $black;
  font-size: 12px;
  font-family: "Arial","Times New Roman","Comic Sans MS";
  color: $white;
  z-index: -1;
}

div {
  background-repeat: no-repeat;
}

a {
  color: $white;
  &:visited {
    color: $grey;
  }
  &:hover {
    color: $grey;
  }
}
@media (min-width: 1px) {
  #mainField {
    position: relative;
    margin-left: auto;
    margin-right: auto;
    margin-top: auto;
    margin-bottom: auto;
    width: 975px;
    height: 800px;
    background-color: $black;
    z-index: 0;
    border-top: 1px solid;
    border-bottom: 1px solid;
    #error_explanation {
      position: absolute;
      bottom: 0px;
      width: 450px;
      border: 2px solid red;
      padding: 7px;
      padding-bottom: 0;
      background-color: $magenta;
      h2 {
        text-align: left;
        font-weight: bold;
        padding: 0px 5px 5px 15px;
        font-size: 12px;
        margin-bottom: 0px;
        background-color: #c00;
        color: $white; 
      }
      ul li {
        font-size: 12px;
        list-style: square;
        color: $red;
        display:block;
        } 
    }
    #menuBarBottoms {
      position: absolute;
      top: 460px;
      left: 330px;
    }

    .logo {
      position: absolute;
      top: 50px;
      right: 10px;
      height: 289px;
      width: 400px;
      background-image: image_url("DJ_logo.png");
    }

    #bookNow {
      position: absolute;
      background-image: image_url("DJ_BookNowBG.png");
      height: 298px;
      width: 380px;
      left: 0px;
      bottom: 0px;
      z-index: 2;
      #bookNowText {
        position: absolute;
        left: 65px;
        bottom: 80px;
        z-index: 3;
        font-size: 40px;
      }
    }

    .handsImage {
      position: absolute;
      background-image: image_url("DJ_hands.png");
      z-index: -1;
      right: 0px;
      height: 160px;
      width: 745px;
      bottom: 0px;
    }


    #aboutUs {
      left: 25px;
    }

    #ourNights {
      left: 170px;
    }

    #contactUs {
      left: 320px;
    }

    #testimonials {
      left: 463px;
    }

    #mainMenu {
      position: absolute;
      right: 0px;
      bottom: 150px;
      .menuBarsImages, .menuBars {
        float: left;
        width: 150px;
        padding-top: 10px;
        z-index: 0;
        margin-right: 3px;
      }
      #menuSelectBars {
        position: relative;
          .menuBars {
          height: 150px;
          background-image: image_url("DJ_menu_drop.png");
        }
      }
      .barText {
        z-index: 1;
        top: 10px;
        font-size: 25px;
      }
      .menuBarsImages {
        height: 50px;
        z-index: 2;
        background-image: image_url("DJ_menu.png");
      }
    }
    #infoBar {
      position: absolute;
      right: 0px;
      font-size: 16px;
      #notice {
        position: relative;
        background-color: $grey;
        color: white;
        right: 10px;
      }
      #breadcrumb {
        font-size: 16px;
        a {
          float: left;
          text-decoration: none;
          color: white;
        }
        .breadcrumbArrow {
          float: left;
          background-image: image_url("breadcrumb-white.png");
          height: 10px;
          width: 10px;
          margin: 5px 0px 0px 5px;
        }
      }
    }
  }

  #yield {
    position: absolute;
    top: 5px;
    left: 0px;
    width: 500px;
    z-index: 5;
    #leftBar {
      position: absolute;
      left: 0px;
      width: 225px;
    }
    #enquires {
      position:absolute;
      top: 10px;
    }
    #rightBar {
      position: absolute;
      left: 250px;
      width: 225px;
    }
    #NewsTable {
      position: relative;
      left: 10px;
      width: 215px;
    }

    .tableNews {
      position: relative;
      left: 5px;
      border-top: 1px solid;
      border-bottom: 1px solid;
      width: 215px;
      th {
        font-size: 16px;
        text-align: left;
      }
    }
    .tableTD {
      position: relative;
      left: 10px;
    }

    .headers {
      position: relative;
      font-size: 26px;
    }

    .newTable {
      width: 100px;
    }

    #eventDescription {
      position: relative;
    }

    #eventDate {
      position: relative;
      left: 65px;
    }

    .tableBottomBorders {
      border-bottom: 1px solid;
    }

    #indexContent {
      position: absolute;
      width: 450px;
    }

    #indexContentTitle {
      position: relative;
      width: 450px;
      font-size: 20px;
      padding-bottom: 3px;
    }

    #indexContentContent {
      position: relative;
      left: 5px;
      background-color: #212121;
      width: 450px;
      padding-bottom: 5px;
    }

    #eventTime {
      position: absolute;
      right: 0px;
    }

    .userInformation {
      position: absolute;
      top: 80px;
      left: -500px;
      background-color: black;
    }

    #editSubmit {
      position: absolute;
      bottom: 50px;
    }

    #editMenu {
      position: absolute;
      top: -25px;
      right: 0px;
      width: 200px;
      li {
        display: block;
      }
    }

    #aboutustext {
      width: 400px;
      height: 350px;
    }

    #enquires_form_Area {
      width: 450px;
      height: 250px;
      background-color: $black;
      color: $white;
    }

    .send_buttons {
      position: relative;
      font-size: 15px;
      font-color: $white;
      width: 457px;
      height: 50px;
    }
  }
}

@media (max-width: 980px) {
  #mainField {
    width: inherit;
    #logo {
      .logo {
        position: absolute;
        top: 50px;
        right: 10px;
        height: 143px;
        width: 200px;
        background-image: image_url("DJ_logo_small.png");
      }
    }
    #bookNow {
      height: 235px;
      width: 300px;
      background-image: image_url("DJ_BookNowBG_small.png");
      #bookNowText {
        font-size: 30px;
        left: 55px;
        bottom: 50px;
      }
    }
    .handsImage {
      width: 700px;
    }
  }
}

@media (max-width:720px) {
  #mainField {
    .handsImage {
      background-image: none;
    }
    #yield {
      top: 170px;
    }
    #logo {
      .logo {
        position: absolute;
        top: 50px;
        right: 10px;
        height: 143px;
        width: 200px;
        background-image: none;
      }
    }
    #mainMenu {
      height: 150px;
      top: 50px;
      left: 0px;
      #menuSelectBars {
        .menuBars {
          background-image: none;
        }
      }
    }
    #bookNow {
      height: 235px;
      width: 300px;
      background-image: image_url("DJ_BookNowBG_small.png");
      #bookNowText {
        font-size: 30px;
        left: 55px;
        bottom: 50px;
      }
    }
    .handsImage {
      width: 700px;
    }
  }
}

@media (max-width:480px) {
  #yield {
    width: 320px;
    height: 500px;
    #enquires_form_Area  {
      width: 300px;
    }
    .send_buttons {
      width: 300px;
    }
    #leftBar {
      position: relative;
    }
    #rightBar {
      position: relative;
      left: 0px;
    }
  }
}
<div id="LoginContent">
	<%= link_to 'Signup', '../users/new' %>
	<p>or to logon please input your details here...</p>
	<table>
		<%= form_for @user_session, :as => :user_session, :url => { :controller => "user_sessions", :action => "create" } do |f| %>
			<tr>
				<td>
					<%= f.label :email %>
				</td>
				<td>
					<%= f.text_field :email %>
				</td>
			</tr>
			<tr>
				<td>
					<%= f.label :password %>
				</td>
				<td>
					<%= f.password_field :password  %>
				</td>
			</tr>
			<tr>
				<td>
					<%= f.label :remember_me %></td>
				<td>
					<%= f.check_box :remember_me %>
				</td>
			</tr>
			<tr>
				<td>
				</td>
				<td>
					<%= f.submit "Login" %>
				</td>
			</tr>
		<% end %>
</table>			
<% if @user_session.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@user_session.errors.count, "error") %> prohibited this user from being saved:</h2>

		<ul>
		<% @user_session.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>
</div>
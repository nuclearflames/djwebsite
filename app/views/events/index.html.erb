<h1>Events: Past, Present, Future</h1>
<p>View the schedule!</p>
	<% @events.each do |event| %>
		<div id="indexContents">
			<div id="indexContentTitle">
				<%= link_to event.title, event_path(event) %>
			</div>
			<div id="indexContentContent">
				<%= event.description %>
				<span id="eventTime">
					<%= event.event_date.to_s() %>
				</span>
				<% if isAdmin %>
					<br />
					<%= link_to 'Edit '+event.title, edit_event_path(event) %>
					<%= button_to 'Delete', event_path(event), :method => 'delete' %>
				<% end %>
			</div>
			<br />
		</div>
	<% end %>
	<br />
<% if isAdmin %>
	<%= link_to "Create New Event", :action=>"new" %>
<% end %>
